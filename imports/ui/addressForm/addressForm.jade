template(name="addressForm")
  form.ui.form
    .field
      label Name
      .two.fields
        .field($b="class : { error : firstName.invalid}")
          input($b="value : firstName" type="text" placeholder="First Name")
        .field($b="class : { error : lastName.invalid}")
          input($b="value : lastName" type="text" placeholder="Last Name")
    .field($b="class : { error : streetAddress.invalid}")
      label Address
      input($b="value : streetAddress" type="text" placeholder="Street Address")
    .fields
      .twelve.wide.field($b="class : { error : city.invalid}")
        input($b="value : city" type="text", placeholder="City")
      .four.wide.field($b="class : { error : postalCode.invalid}")
        input($b="value : postalCode" type="text", placeholder="Postal Code")
    .two.fields
      .field($b="class : { error : state.invalid}, enable : stateEnabled")
        label State
        select.ui.dropdown($b="value : state, ref : stateSelect, options : states, optionsValue : abreviated, optionsText : name")
      .field($b="class : { error : country.invalid}, change : countryChanged")
        label Country
        select.ui.search.dropdown($b="value : country, options: countries, ref : countrySelect")
    button.ui.right.floated.button($b="click : save, enable : saveEnabled") Save
